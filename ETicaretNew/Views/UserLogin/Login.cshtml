
@model ETicaretNew.Models.User


@{
	ViewData["Title"] = "login";
	Layout = "~/Views/Shared/_FrontendLayout.cshtml";

}

<section id="form">
	<!--form-->
	<div class="container" >
		<div class="row">
			<div class="col-sm-4 col-sm-offset-1">
				<div class="login-form" style="text-align: center">
					<!--login form-->
					<h2>Hesabınıza Giriş Yapın</h2>
					<form asp-controller="UserLogin" asp-action="Login" method="post">
						<input type="email" asp-for="Email" placeholder="Email Adresi"/>
						<input type="password" asp-for="Sifre" placeholder="Şİfre" />
						@*<span>
							<input type="checkbox" class="checkbox">
							Keep me signed in
						</span>*@
						<button type="submit">Giriş</button>
					</form>
				</div><!--/login form-->
			</div>
			<div class="col-sm-1">
						<h2 class="or">Veya</h2>
					</div>
			<div class="col-sm-4">
						<div class="signup-form">
							<!--sign up form-->
							<h2>Yeni Kullanıcı Kaydı!</h2>
							<form asp-controller="UserLogin" asp-action="Register">
								
								<button type="submit" class="btn btn-default">Hemen Üye Ol</button>
							</form>
						</div><!--/sign up form-->
					</div>
		</div>
	</div>
</section>
 <script>
        @if (TempData["hata"] != null)
        {
            <text>alert("@TempData["hata"].ToString()")</text>
        }
    </script>