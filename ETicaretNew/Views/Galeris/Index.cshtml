@model IEnumerable<ETicaretNew.Models.Galeri>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Galeri</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Urun)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src="data:image;base64,@Html.DisplayFor(modelItem => item.Resim)" alt="base64 e dönüştürülmüş resim" style="height:80px; width:80px;">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Urun.Adi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ResimId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ResimId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ResimId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
