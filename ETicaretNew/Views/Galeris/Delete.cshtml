@model ETicaretNew.Models.Galeri

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Galeri</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Resim)
        </dt>
        <dd>
            <img src="data:image;base64,@Html.DisplayFor(model => model.Resim)" alt="base64 e dönüştürülmüş resim" style="height:80px; width:80px;">
